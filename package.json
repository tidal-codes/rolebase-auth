{
  "name": "advanced-auth-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:api dev:web",
    "dev:api": "npm run dev --workspace @auth-crud/api",
    "dev:web": "npm run dev --workspace @auth-crud/web",
    "build": "npm run build --workspaces",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}